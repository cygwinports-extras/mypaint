inherit python


HOMEPAGE="http://mypaint.intilinux.com/"
SRC_URI="http://download.gna.org/mypaint/${P}.tar.bz2"

src_compile() {
	lndirs
	cd ${B}
	scons || error "Scons compile failed"
}

src_install() {
	cd ${B}
	scons install prefix=${D}/usr || error "Scons install failed"
	python_optimize /usr/share/${PN}
}
